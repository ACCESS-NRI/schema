{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "properties": {
        "name": {
            "type": "string"
        },
        "experiment_uuid": {
            "type": "string",
            "format": "uuid",
        },
        "short_description": {"type": "string"},
        "long_description": {"type": "string"},
        "model": {
            "oneOf": [
                {"type": ["string", "null"]},
                {
                    "type": "array",
                    "items": {"type": ["string", "null"]},
                },
            ]
        },
        "realm": {
            "oneOf": [
                {"type": "null"},
                {
                    "type": "string",
                    "enum": [
                        "aerosol",
                        "atmos",
                        "atmosChem",
                        "land",
                        "landIce",
                        "none",
                        "ocean",
                        "ocnBgchem",
                        "seaIce",
                        "unknown"
                    ]
                }
            ]
        },
        "frequency": {
            "oneOf": [
                {"type": "null"},
                {
                    "type": "string",
                    "oneOf": [
                        {
                            "pattern": "^fx$"
                        },
                        {
                            "pattern": "^subhr$"
                        },
                        {
                            "pattern": "^\\d+hr$"
                        },
                        {
                            "pattern": "^\\d+day$"
                        },
                        {
                            "pattern": "^\\d+mon$"
                        },
                        {
                            "pattern": "^\\d+yr$"
                        },
                        {
                            "pattern": "^\\d+dec$"
                        }
                   ]
                }
            ]
        },
        "variable": {
            "type": "array",
            "items": {
                "type": ["string", "null"]
            }
        },
        "nominal_resolution": {
            "oneOf": [
                {"type": ["string", "null"]},
                {
                    "type": "array",
                    "items": {"type": ["string", "null"]},
                },
            ]
        },
        "version": {"type": ["number", "null"]},
        "contact": {"type": ["string", "null"]},
        "email": {"type": ["string", "null"]},
        "created": {"type": ["string", "null"]},
        "reference": {"type": ["string", "null"]},
        "license": {"type": ["string", "null"]},
        "url": {"type": ["string", "null"]},
        "parent_experiment": {"type": ["string", "null"]},
        "related_experiments": {
            "type": ["array", "null"],
            "items": {"type": ["string", "null"]},
        },
        "notes": {"type": ["string", "null"]},
        "keywords": {
            "type": ["array", "null"],
            "items": {"type": ["string", "null"]},
        },
    },
    "required": [
        "name",
        "experiment_uuid",
        "short_description",
        "long_description",
        "model",
        "nominal_resolution",
        "version",
        "contact",
        "email",
        "created",
        "reference",
        "license",
        "url",
        "parent_experiment",
        "related_experiment",
        "note",
        "keywords"
    ],
    "additionalProperties": false
}
